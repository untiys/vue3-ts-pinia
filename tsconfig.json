{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    // 对使用@符，报错进行配置，不加会ctrl+左键无效
    "baseUrl": "./",
    "paths": {
    "@/*":["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/router/routes.js", "src/router/routes.js", "src/router/routesComponents.js", "src/router/index.js", "src/router/index.js"],
  "exclude": ["src/axios/request.js"]
}
